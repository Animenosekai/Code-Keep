  {
    "name": "Changes Keep",
    "version": "1.0",
    "description": "Keep your Inspect Element Changes!",
    
    "permissions": [
        "storage",
        "unlimitedStorage",
        "tabs"
    ],

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "css": ["changes_keep.css"],
        "js": ["changes_keep.js"]
      }
    ],

    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
        "default_popup": "changes_keep.html",
        "default_title": "Heyo"
    },

    "manifest_version": 2
  }