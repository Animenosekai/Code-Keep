{
    "manifest_version": 2,
    "name": "Code Keep",
    "version": "1.2",
    "offline_enabled": true,
  
    "background": {
      "persistent": false,
      "scripts": ["background.js"]
    },
  
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }],
  
    "page_action": {
      "default_title": "Save this page",
      "default_popup": "popup.html"
    },
    
    "options_page": "options.html",

    "permissions": [
        "storage",
        "unlimitedStorage",
        "tabs"
    ]
  }